<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Login Page</h1>
        <div style="width:30%; margin:25px auto;">
            <div id="errordiv" style="display:none;" class="alert alert-danger">
                <strong id="message"></strong>
            </div>
            <div class="form-group">
                <input class="form-control" id="txtUsername" name="txtUsername" type="text" placeholder="Enter your Username">
            </div>
            <div class="form-group">
                <input class="form-control" id="txtPassword" name="txtPassword" type="password" placeholder="Enter your Password">
            </div>
            <div class="form-group">
                <button onclick="return CheckLoginDetails();" class="btn btn-primary btn-lg btn-block">Login</button>
            </div>
        </div>
    </div>
</div>